                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Background="Transparent">
                            <VisualStateManager.CustomVisualStateManager>
                                <core:AgColorPickerDropDownButtonVisualStateManager />
                            </VisualStateManager.CustomVisualStateManager>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="00:00:00" To="MouseOver" />
                                        <VisualTransition GeneratedDuration="00:00:00" To="Pressed" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="ParentSelectedNormal">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowBrush" Storyboard.TargetProperty="Color" To="White" />
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowContainerBrushGradient1" Storyboard.TargetProperty="Color" To="#FF8C8C8B" />
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowContainerBrushGradient2" Storyboard.TargetProperty="Color" To="#FFA6A6A6" />
                                            <DoubleAnimation Duration="0" Storyboard.TargetName="Delimiter" Storyboard.TargetProperty="Opacity" To="1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowBrush" Storyboard.TargetProperty="Color" To="White" />
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowContainerBrushGradient1" Storyboard.TargetProperty="Color" To="#FF828282" />
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowContainerBrushGradient2" Storyboard.TargetProperty="Color" To="#FF9B9B9B" />
                                            <DoubleAnimation Duration="0" Storyboard.TargetName="Delimiter" Storyboard.TargetProperty="Opacity" To="1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowBrush" Storyboard.TargetProperty="Color" To="White" />
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowContainerBrushGradient1" Storyboard.TargetProperty="Color" To="#FFBABABB" />
                                            <ColorAnimation Duration="0" Storyboard.TargetName="ArrowContainerBrushGradient2" Storyboard.TargetProperty="Color" To="#FFCDCDCC" />
                                            <DoubleAnimation Duration="0" Storyboard.TargetName="Delimiter" Storyboard.TargetProperty="Opacity" To="1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" Storyboard.TargetName="Arrow" Storyboard.TargetProperty="Opacity" To="0" />
                                            <DoubleAnimation Duration="0" Storyboard.TargetName="CheckedStateArrow" Storyboard.TargetProperty="Opacity" To="1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused">
                                        <Storyboard>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unfocused">
                                        <Storyboard>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <StackPanel Orientation="Horizontal">
                                <Rectangle x:Name="Delimiter" Opacity="0" Width="1">
