                                            <GradientStop x:Name="ArrowContainerBrushGradient1" Offset="0" />
                                            <GradientStop x:Name="ArrowContainerBrushGradient2" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Path x:Name="Arrow" Stretch="Fill" Data="F1 M 384,282L 391,282L 388,287L 387,287L 384,282 Z " Height="5" Width="7" Margin="2,0,2,0">
                                            <Path.Fill>
                                                <SolidColorBrush x:Name="ArrowBrush" Color="#FF656565" />
                                            </Path.Fill>
                                        </Path>
                                        <Path x:Name="CheckedStateArrow" Stretch="Fill" Data="F1 M 384,282L 391,282L 388,287L 387,287L 384,282 Z " Height="5" Width="7" Margin="2,0,2,0" Fill="Black" Opacity="0" />
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
