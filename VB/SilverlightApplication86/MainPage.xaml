                                    <ColorAnimation Duration="0:0:2" Storyboard.TargetName="c3" Storyboard.TargetProperty="Color" To="#FF7F2B70" AutoReverse="True" RepeatBehavior="Forever" />
                                </Storyboard>
                            </Grid.Resources>
                            <Path Stretch="Fill" x:Name="Caret" Data="F1 M 303.537,190.041C 303.299,189.802 303.023,189.64 302.821,189.639L 302.821,189.639C 302.649,189.639 302.531,189.755 302.531,190.041 Z M 287.108,192.514L 288.092,195.957L 289.063,199.355L 301.855,212.148C 302.296,212.588 303.017,212.588 303.457,212.148L 307.519,208.084C 307.96,207.644 307.96,206.925 307.519,206.483L 294.726,193.691L 291.717,192.831L 287.887,191.738C 287.783,191.708 287.688,191.694 287.6,191.694L 287.6,191.694C 287.182,191.694 286.968,192.019 287.108,192.514 Z M 290.196,198.223L 289.063,194.824L 290.196,193.691L 293.593,194.824L 303.788,205.019L 302.655,206.152L 292.862,196.359C 292.642,196.136 292.281,196.136 292.06,196.359L 291.728,196.688C 291.509,196.91 291.509,197.271 291.728,197.491L 301.523,207.284L 300.39,208.417L 290.196,198.223 Z " Height="27.187" HorizontalAlignment="Left" Margin="4.027,4.028,0,8.785" Width="27.186">
                                <Path.Fill>
                                    <LinearGradientBrush StartPoint="0.320022,-0.00943822" EndPoint="0.658516,0.948759">
                                        <GradientStop x:Name="c1" Color="#FFAA98C9" Offset="0" />
                                        <GradientStop x:Name="c2" Color="#FF5C4A8A" Offset="0.510986" />
                                        <GradientStop x:Name="c3" Color="#FF3F2B70" Offset="1" />
                                    </LinearGradientBrush>
                                </Path.Fill>
                            </Path>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--AgMenuItemContentPresenter-->
        <ControlTemplate x:Key="ContentPresenterTemplate" TargetType="menuInternal:AgMenuItemContentPresenter">
            <Grid x:Name="ElementRoot">
                <Grid x:Name="ElementCheckAreaContainer">
                    <Grid x:Name="ElementCheckArea">
                        <Border Height="Auto" Margin="0,1,0,1" x:Name="ElementCheck" Width="Auto" CornerRadius="4,4,4,4" Padding="1,1,1,1">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                    <GradientStop Color="#7FFFFFFF" />
                                    <GradientStop Color="#00FFFFFF" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border Height="Auto" Width="Auto" CornerRadius="3,3,3,3" Padding="1,1,1,1">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                        <GradientStop Color="#FF707070" Offset="0" />
                                        <GradientStop Color="#FF929292" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border Height="Auto" Width="Auto" CornerRadius="2,2,2,2" Padding="3,3,3,3">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                            <GradientStop Color="#FFBCBCBD" />
                                            <GradientStop Color="#FFCFCFCE" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>
                        </Border>
                    </Grid>
                </Grid>
                <Grid x:Name="ElementIconAreaContainer">
                    <Grid x:Name="ElementIconArea">
                        <ContentControl x:Name="ElementIcon" Content="{TemplateBinding Icon}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
                    </Grid>
                </Grid>
                <ContentControl Content="{TemplateBinding Header}" Margin="6,6,6,6" />
                <ContentControl x:Name="ElementContent" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="1,3,1,3" VerticalAlignment="Center" />
            </Grid>
        </ControlTemplate>
        <!--AgPopupMenuStyle-->
        <Style TargetType="menu:AgPopupMenu" x:Key="AgPopupMenuStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="menu:AgPopupMenu">
                        <Grid>
                            <Grid>
                                <Grid.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="4" ShadowDepth="4"/>
                                </Grid.Effect>
                                <Border Background="#FF6E6E6E" CornerRadius="3,3,3,3" />
                                <!--<menu:AgSubMenuDefaultStyleHelper Background="White"/>-->
                                <Border Background="#FFFFFFFF" CornerRadius="2,2,2,2" Margin="1,1,1,1">
                                    <menuInternal:AgMenuScrollViewer x:Name="ItemsPresenterContainer" ScrollButtonClickMode="{TemplateBinding ScrollButtonClickMode}" Margin="0,0,0,1">
                                        <ItemsPresenter />
                                    </menuInternal:AgMenuScrollViewer>
                                </Border>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--MenuTemplate-->
        <Style x:Key="MenuTemplate" TargetType="menu:AgMenu">
            <Setter Property="Templates">
                <Setter.Value>
                    <menu:AgMenuTemplateList>
                        <menu:AgMenuTemplateListItem>
                            <menu:AgMenuTemplateListItem.Template>
                                <ControlTemplate TargetType="menu:AgMenu">
                                    <Border Height="Auto" Width="Auto" CornerRadius="4,4,4,4" Padding="1,0,3,0">
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                <GradientStop Color="#FFDEDEDE" Offset="0" />
                                                <GradientStop Color="#FFF1F1F1" Offset="1" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <ItemsPresenter />
                                    </Border>
                                </ControlTemplate>
                            </menu:AgMenuTemplateListItem.Template>
                        </menu:AgMenuTemplateListItem>
                    </menu:AgMenuTemplateList>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerTemplates">
                <Setter.Value>
                    <menu:AgMenuTemplateList x:Key="ItemContainerTemplates">
                        <menu:AgMenuTemplateListItem Key="AgMenuItem">
                            <menu:AgMenuTemplateListItem.Template>
                                <ControlTemplate TargetType="menu:AgMenuItem">
                                    <Grid x:Name="ElementRoot">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <Storyboard>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Hot">
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="hover" Storyboard.TargetProperty="Opacity" To="1" />
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Pressed">
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="hover" Storyboard.TargetProperty="Opacity" To="1" />
                                                        <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="Gradient1" Storyboard.TargetProperty="Color" To="#7FFFFFFF" />
                                                        <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="Gradient2" Storyboard.TargetProperty="Color" To="#00FFFFFF" />
                                                        <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="Gradient3" Storyboard.TargetProperty="Color" To="#FF707070" />
                                                        <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="Gradient4" Storyboard.TargetProperty="Color" To="#FF929292" />
                                                        <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="Gradient5" Storyboard.TargetProperty="Color" To="#FFA9A9AA" />
                                                        <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="Gradient6" Storyboard.TargetProperty="Color" To="#FFBABAB9" />
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="DroppedDown">
                                                    <Storyboard>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="DroppedDownSelected">
                                                    <Storyboard>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Disabled">
                                                    <Storyboard>
                                                        <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="disableElement" Storyboard.TargetProperty="Color" To="#99999999" />
                                                        <!--<DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="disabled" Storyboard.TargetProperty="Opacity" To="1"/>-->
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <menuInternal:AgMenuItemContentPresenter x:Name="ElementContentPresenter" CheckAreaVisibility="{TemplateBinding CheckAreaVisibility}" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" Header="{TemplateBinding Icon}" Template="{StaticResource ContentPresenterTemplate}">
                                            <menuInternal:AgMenuItemContentPresenter.OpacityMask>
                                                <SolidColorBrush x:Name="disableElement" Color="#FFFFFFFF" />
                                            </menuInternal:AgMenuItemContentPresenter.OpacityMask>
                                            <menuInternal:AgMenuItemContentPresenter.Icon>
                                                <Border Height="Auto" Margin="0,1,0,1" x:Name="hover" Width="Auto" Padding="1,1,1,1" CornerRadius="4,4,4,4" Opacity="0">
                                                    <Border.Background>
                                                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                            <GradientStop x:Name="Gradient1" Color="#19000000" />
                                                            <GradientStop x:Name="Gradient2" Color="#00000000" Offset="1" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Border Height="Auto" Width="Auto" CornerRadius="3,3,3,3" Padding="1,1,1,1">
                                                        <Border.Background>
                                                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                                <GradientStop x:Name="Gradient3" Color="#FF7E7E7E" />
                                                                <GradientStop x:Name="Gradient4" Color="#FF9D9D9D" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                        <Border Height="Auto" Width="Auto" CornerRadius="2,2,2,2" Padding="3,3,3,3">
                                                            <Border.Background>
                                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                                    <GradientStop x:Name="Gradient5" Color="#FFDBDBDB" />
                                                                    <GradientStop x:Name="Gradient6" Color="#FFF7F7F7" Offset="1" />
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                    </Border>
                                                </Border>
                                            </menuInternal:AgMenuItemContentPresenter.Icon>
                                        </menuInternal:AgMenuItemContentPresenter>
                                        <Border Height="Auto" Margin="0,1,0,1" x:Name="disabled" Width="Auto" Padding="1,1,1,1" CornerRadius="4,4,4,4" Opacity="0" OpacityMask="Yellow" IsHitTestVisible="False">
                                            <Border.Background>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="#00000000" />
                                                    <GradientStop Color="#19000000" Offset="0.5" />
                                                    <GradientStop Color="#00000000" Offset="1" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <Popup x:Name="ElementPopup"/>
                                    </Grid>
                                </ControlTemplate>
                            </menu:AgMenuTemplateListItem.Template>
                        </menu:AgMenuTemplateListItem>
                        <menu:AgMenuTemplateListItem Key="AgMenuSeparator">
                            <menu:AgMenuTemplateListItem.Template>
                                <ControlTemplate TargetType="menu:AgMenuSeparator">
                                    <Grid Height="Auto" Width="2" Margin="2,4,1,4" x:Name="separator2">
                                        <Border x:Name="separator1" Width="1" HorizontalAlignment="Left">
                                            <Border.Background>
                                                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                                    <GradientStop Color="#FF939393" />
                                                    <GradientStop Color="#FFC1C1C1" Offset="1" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                        <Border HorizontalAlignment="Right" Width="1">
                                            <Border.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#19FDFDFD" />
                                                    <GradientStop Color="#19FDFDFD" Offset="1" />
                                                    <GradientStop Color="#FFFDFDFD" Offset="0.5" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </menu:AgMenuTemplateListItem.Template>
                        </menu:AgMenuTemplateListItem>
                    </menu:AgMenuTemplateList>
                </Setter.Value>
            </Setter>
            <Setter Property="SubMenuStyle" Value="{StaticResource AgPopupMenuStyle}" />
            <Setter Property="CheckAreaDisplayMode" Value="ReplaceIcon"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <menuInternal:AgMenuPanel IsMultiLine="True" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--AgMenuItemHorizontalContentPresenterTemplate-->
        <ControlTemplate x:Key="AgMenuItemHorizontalContentPresenterTemplate" TargetType="menuInternal:AgMenuItemContentPresenter">
            <Grid x:Name="ElementRoot" Margin="{TemplateBinding Padding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid x:Name="ElementIconCheckAreaContainer" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                    <Grid x:Name="ElementIconCheckArea">
                        <Grid x:Name="ElementIconAreaContainer">
                            <Grid x:Name="ElementIconArea">
                                <ContentControl x:Name="ElementIcon" OpacityMask="{TemplateBinding OpacityMask}" Content="{TemplateBinding Icon}" Margin="0,1,4,1" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <ContentControl OpacityMask="{TemplateBinding OpacityMask}" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" FontSize="13" Foreground="{TemplateBinding Foreground}" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" />
                <ContentControl x:Name="ElementContent" OpacityMask="{TemplateBinding OpacityMask}" Content="{TemplateBinding Content}" FontSize="13" ContentTemplate="{TemplateBinding ContentTemplate}" Grid.Column="1" Grid.Row="0" />
            </Grid>
        </ControlTemplate>
        <!--MainMenuTemplate-->
        <Style TargetType="menu:AgMenu" x:Key="MainMenuTemplate">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Templates">
                <Setter.Value>
                    <menu:AgMenuTemplateList>
                        <menu:AgMenuTemplateListItem Key="Horizontal">
                            <menu:AgMenuTemplateListItem.Template>
                                <ControlTemplate TargetType="menu:AgMenu">
                                    <Border CornerRadius="5,5,5,5" Padding="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="ElementEmptyArea" CornerRadius="0,4,4,0" Grid.Column="1">
                                            </Border>
                                            <ItemsPresenter HorizontalAlignment="Left" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </menu:AgMenuTemplateListItem.Template>
                        </menu:AgMenuTemplateListItem>
                    </menu:AgMenuTemplateList>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerTemplates">
                <Setter.Value>
                    <menu:AgMenuTemplateList>
                        <menu:AgMenuTemplateListItem Key="AgMenuItem;Horizontal">
                            <menu:AgMenuTemplateListItem.Template>
                                <ControlTemplate TargetType="menu:AgMenuItem">
                                    <Grid x:Name="ElementRoot">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal">
                                                    <Storyboard>
                                                        <!--<ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient1" Storyboard.TargetProperty="Color" To="Transparent"/>
                                                    <ColorAnimation Duration="0:0:0.01" Storyboard.TargetName="ElementBackgroundGradient2" Storyboard.TargetProperty="Color" To="Transparent"/>-->
                                                        <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="DropBorder" Storyboard.TargetProperty="Opacity" To="0" />
                                                        <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="HotBorder" Storyboard.TargetProperty="Opacity" To="0" />
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Hot">
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="HotBorder" Storyboard.TargetProperty="Opacity" To="1" />
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="DroppedDown">
                                                    <Storyboard>
                                                        <DoubleAnimation Duration="0:0:0.01" Storyboard.TargetName="DropBorder" Storyboard.TargetProperty="Opacity" To="1" />
                                                        <ObjectAnimationUsingKeyFrames Duration="0:0:0.01" Storyboard.TargetName="ElementContentPresenter" Storyboard.TargetProperty="Foreground">
